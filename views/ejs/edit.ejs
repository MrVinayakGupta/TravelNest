<% layout("/layout/boilerplate") %>

    <body>
        <h3> This is edit page of Airbnb for <%= id %>
        </h3>

        <div class="form">
            <form method="POST" action="/<%=listing._id %>/?_method=PUT" enctype="multipart/form-data" class=" g-3 needs-validation" novalidate >
                <div class="col-md-4">
                    <label for="validationCustom01" class="form-label">Title</label>
                    <input value="<%= listing.title %>" placeholder="Enter Title" type="text" class="form-control"
                        id="validationCustom01" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom02" class="form-label">Description</label>
                    <textarea  placeholder="Enter Description" class="form-control"
                        id="validationCustom02" required><%= listing.description %></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom02" class="form-label">Upload New Image</label>
                    <input name="listing[image]"  type="file"
                        class="form-control" id="validationCustomUsername" aria-describedby="inputGroupPrepend"
                        required>
                    <div class="invalid-feedback">
                        Please provide a valid URL!.
                    </div>
                    <!-- </div> -->
                </div>
                 <div id="flex">
                    <div class="col-md-6">
                        <label for="validationCustom03" class="form-label">Price</label>
                        <input value="<%= listing.price %>"  placeholder="Enter price" type="number" class="form-control"
                            id="validationCustom03" required>
                        <div class="invalid-feedback">
                            Please provide a valid Price!.
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="validationCustom03" class="form-label">Location</label>
                        <input value="<%= listing.location %>"  placeholder="Enter Location" type="text" class="form-control"
                            id="validationCustom03" required>
                        <div class="invalid-feedback">
                            Please provide a valid Location!.
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <label for="validationCustom01" class="form-label">Country</label>
                    <input value="<%= listing.country %>" placeholder="Enter Country Name" type="text"
                        class="form-control" id="validationCustom01" required>
                    <div class="invalid-feedback">
                        Please provide a valid Country!.
                    </div>
                </div>
                <br><br>

