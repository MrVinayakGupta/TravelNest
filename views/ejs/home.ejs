        <div class="tax-toggle">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>

    <body>

        <div class="cardContainer">
            <% for (let listing of allListings) { %>
                <div id="card">
                    <a href="/<%= listing._id %>">
                        <img class="rounded-t-lg" src="<%= listing.image.url %>" alt="" />
                        <h5>
                            <%= listing.title %>
                        </h5>
                        <p>Price: &#8377;<%= listing.price %> per night</p>
                        <p>Location: <%= listing.location %>
                        </p>
                        <button class="btn btn-primary" type="submit">View</button>
                    </a>

                </div>
                <% } %>
        </div>
    </body>

    <script>
        let taxSwitch = document.getElementById("switchCheckDefault");
        taxSwitch.addEventListener("change", function() {
            if (this.checked) {
                // Code to display total after taxes
                console.log("Display total after taxes");
                for(info of taxInfo) {
                    info.style.display = "block";
                }
            } else {
                // Code to hide total after taxes
                console.log("Hide total after taxes");
                for(info of taxInfo) {
                    info.style.display = "none";
                }
            }
        });
    </script>