<% layout ("/layout/boilerplate") %>

    <body>

            <br>
            <div class="show">
                <h1>
                    <%= listing.title %>
                </h1>
                <img src="<%= listing.image.url %>" alt="">
                <p>
                    <%= listing.description %>
                </p>
                <p><b> Price:</b> &#8377;<%= listing.price %> per night </p>
                <p><b> Location: </b>
                    <%= listing.location %>
                </p>
                <p><b>Country: </b>
                    <%= listing.country %>
                </p>
            </div>
            <div id="flexS">
                <form method="GET" action="/<%= listing._id %>/edit">
                    <button class="btn btn-primary" type="submit">Edit</button>
                </form>
                
                <form method="POST" action="/<%=listing._id%>?_method=DELETE">
                    <button class="btn btn-primary" type="submit">Delete </button>
                </form>
            </div>

    </body>